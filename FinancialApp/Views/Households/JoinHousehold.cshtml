@model FinancialApp.Models.HouseholdViewModel

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Join or Create a Household</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <button class="right-side-toggle waves-effect waves-light btn-info btn-circle pull-right m-l-20"><i class="ti-settings text-white"></i></button>
        <ol class="breadcrumb">
            <li><a href="#">Dashboard</a></li>
            @if (Model.IsJoinHouse)
            { <li class="active">Join Household</li>}
            else
            {<li class="active">Create Household</li>}
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="white-box">

            @if (Model.IsJoinHouse)
            {              
                <h3 class="box-title">Join Household</h3>

                using (Html.BeginForm("JoinHousehold", "Households", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.HHId)
                <h4>welcome to the<strong>@Model.HHName</strong> household. click below.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-6">
                        <input type="submit" class="btn btn-default" value="Join" />
                    </div>
                </div>
                    }
                }
                else
                {
                <h2>Create Household</h2>
                <h3 class="box-title">Create Household</h3>

                using (Html.BeginForm("Create", "Households", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                @Html.AntiForgeryToken()

                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Household Name", new { @class = "col-md-2 control-label" })
                    <div class="col-lg-6">
                        @Html.TextBoxFor(m => m.HHName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-6">
                        <input type="submit" class="btn btn-default" value="Submit" />
                    </div>
                </div>
                    }
                }
            <div id="ct-visits" style="height: 405px;"></div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
