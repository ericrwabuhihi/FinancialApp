@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard HTML Template</title>
    @*<meta charset="utf-8">
    <meta content="ie=edge" http-equiv="x-ua-compatible">
    <meta content="template language" name="keywords">
    <meta content="Tamerlan Soziev" name="author">
    <meta content="Admin dashboard html template" name="description">
    <meta content="width=device-width, initial-scale=1" name="viewport">*@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Template/favicon.png" rel="shortcut icon">
    <link href="~/Template/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="~/Template/bower_components/select2/dist/css/select2.min.css" rel="stylesheet">
    <link href="~/Template/bower_components/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
    <link href="~/Template/bower_components/dropzone/dist/dropzone.css" rel="stylesheet">
    <link href="~/Template/bower_components/datatables/media/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="~/Template/bower_components/datatables/media/css/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/Template/bower_components/fullcalendar/dist/fullcalendar.min.css" rel="stylesheet">
    <link href="~/Template/css/main.css" rel="stylesheet">
</head>
<body>
    <div class="all-wrapper">
        <div class="layout-w">
            <div class="menu-w menu-activated-on-click">
                <div class="logo-w">
                    <a class="logo" href="index.html"><img src="~/Template/img/avatar1.jpg" /><span>EK</span></a>
                    <div class="mobile-menu-trigger">
                        <div class="os-icon os-icon-hamburger-menu-1"></div>
                    </div>
                </div>
                <div class="menu-and-user">
                    <div class="logged-user-w">
                        <div class="avatar-w">
                            <img alt="" src="~/Template/img/img1.jpg" />
                        </div>
                        @if (Request.IsAuthenticated)
                        {
                            <div class="logged-user-info-w">
                                <div class="logged-user-name">
                                    @User.Identity.GetFirstName()
                                </div>
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                                }
                            </div>
                         }
                    </div>
                    <ul class="main-menu">
                        <li>
                            <a href="index.html">
                                <div class="icon-w">
                                    <div class="os-icon os-icon-window-content"></div>
                                </div>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="has-sub-menu">
                            <a href="#">
                                <div class="icon-w">
                                    <div class="os-icon os-icon-donut-chart-2"></div>
                                </div>
                                <span>Household</span>
                            </a>
                            <ul class="sub-menu">
                                <li>
                                    <a strong class="activity-title" href="@Url.Action("Index", "HouseholdS", new { id = Model.Id })"><span>Household</span></a>
                                </li>
                            </ul>
                        </li>

                        <li class="has-sub-menu">
                            <a href="#">
                                <div class="icon-w">
                                    <div class="os-icon os-icon-donut-chart-2"></div>
                                </div>
                                <span>Accounts</span>
                            </a>
                            <ul class="sub-menu">
                                <li>
                                    <a strong class="activity-title" href="@Url.Action("Edit", "FinancialAccounts", new { id = Model.Id })"><span>Edit</span></a>

                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="content-w">
                <p>
                    Financial Portal
                </p>
                <div class="content-i">
                    <div class="content-box">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="element-wrapper">
                                    <div class="element-actions">
                                        <form class="form-inline justify-content-sm-end">
                                            <select class="form-control form-control-sm rounded">
                                                <option value="Pending">
                                                    Today
                                                </option>
                                                <option value="Active">
                                                    Last Week
                                                </option>
                                                <option value="Cancelled">
                                                    Last 30 Days
                                                </option>
                                            </select>
                                        </form>
                                    </div>
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="content-panel">

                        <div class="element-wrapper">
                            <h6 class="element-header">
                                <em>Quick Links</em>
                            </h6>
                            <div class="element-box-tp">
                                <div class="activity-boxes-w">
                                    <div class="activity-box-w">
                                        <div class="activity-box">

                                            <div class="activity-info">

                                                <strong class="activity-title">
                                                    <a strong class="activity-title" href="@Url.Action("Create", "FinancialAccounts", new { id = Model.Id })"><span>Add new Account</span></a>

                                                </strong>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="activity-box-w">

                                        <div class="activity-box">
                                            <div class="activity-info">
                                                <strong class="activity-title">
                                                    <a strong class="activity-title" href="@Url.Action("Create", "Transactions", new { id = Model.Id })"><span> Transaction</span></a>
                                                </strong>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="activity-box-w">

                                        <div class="activity-box">
                                            <div class="activity-info">
                                                <strong class="activity-title">
                                                    <a class="activity-title" href="@Url.Action("Create", "Categories", new { id = Model.Id })"><span>Create a New Budget</span></a>
                                                </strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="element-wrapper">
                            <h6 class="element-header">
                                <em>Invite someone to join your Household</em>
                            </h6>
                            <div class="element-box-tp">
                                <div class="profile-tile">
                                    <div class="element-box el-tablo">

                                        <div>
                                            @using (Html.BeginForm("Invite", "Households", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                            {
                                                @Html.AntiForgeryToken()

                                                @*<div class="form-horizontal">
                                                *@
                                                <div class="row">
                                                    @*<div class="col-md-10">
                                                    *@
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <div class="form-group">
                                                        <label for="inviteEmail" class="control-label" style="">Email</label>
                                                        <div class="col-md-12">
                                                            <input type="text" name="email" id="inviteEmail" class="form-control" />
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="pt-btn">
                                                            <input type="submit" value="Send Invitation" class="btn btn-success btn-sm" />
                                                        </div>
                                                    </div>

                                                    @*
                                                        </div>*@
                                                </div>
                                            }


                                        </div>
                                    </div>
                                </div>
                                <div class="profile-tile">
                                    <div class="element-box el-tablo">
                                        <div class="label">
                                            <em>Leave Household</em>
                                        </div>
                                        <div>
                                            <p class="col-xs-12 text-danger">@ViewBag.Error</p>
                                            @*<p>Leave your current household and start another one.</p>*@
                                            @using (Html.BeginForm("LeaveHousehold", "Households"))
                                            {
                                                @Html.AntiForgeryToken()
                                                <div class="form-horizontal">
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <div class="form-group col-xs-12">
                                                        <input type="checkbox" name="confirmLeaveHousehold" value="true" class="col-xs-1" />
                                                        <p class="col-xs-11">No access to this household.</p>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="col-md-11">
                                                            <input type="submit" value="Leave Household" class="btn btn-default" />
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Template/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/Template/bower_components/moment/moment.js"></script>
    <script src="~/Template/bower_components/chart.js/dist/Chart.min.js"></script>
    <script src="~/Template/bower_components/select2/dist/js/select2.full.min.js"></script>
    <script src="~/Template/bower_components/ckeditor/ckeditor.js"></script>
    <script src="~/Template/bower_components/bootstrap-validator/dist/validator.min.js"></script>
    <script src="~/Template/bower_components/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="~/Template/bower_components/dropzone/dist/dropzone.js"></script>
    <script src="~/Template/bower_components/editable-table/mindmup-editabletable.js"></script>
    <script src="~/Template/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Template/bower_components/datatables/media/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Template/bower_components/fullcalendar/dist/fullcalendar.min.js"></script>
    <script src="~/Template/js/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

